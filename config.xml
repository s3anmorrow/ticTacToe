<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.seanmorrow.tictactoe" version="1.0.0" versionCode="1" xmlns:android="http://schemas.android.com/apk/res/android" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Tic Tac Toe</name>
    <description>
		The usual Tic Tac Toe game implemented as game build II for the course Game Programming I (Nova Scotia Community College)
    </description>
    <author email="paddyjumpup@gmail.com" href="">
        PaddyJumpUp
    </author>
    <content src="index.html" />
    <gap:platform name="android" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-installLocation" value="auto" />
	<preference name="SplashScreen" value="screen" />
	<preference name="SplashScreenDelay" value="3000" />
    <gap:splash src="lib/splash/screen-xhdpi.9.png" />

	<icon gap:platform="android" gap:qualifier="ldpi" gap:density="ldpi" src="lib/icon/icon-48.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" gap:density="mdpi" src="lib/icon/icon-72.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" gap:density="hdpi" src="lib/icon/icon-96.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" gap:density="xhdpi" src="lib/icon/icon-144.png" />
	<icon gap:platform="android" gap:qualifier="xxhdpi" gap:density="xxhdpi" src="lib/icon/icon-192.png" />
	<icon gap:platform="android" gap:qualifier="xxxhdpi" gap:density="xxxhdpi" src="lib/icon/icon-512.png" />

	<splash gap:platform="android" gap:qualifier="ldpi" gap:density="ldpi" width="240" height="320" src="lib/splash/screen-ldpi.9.png" />
    <splash gap:platform="android" gap:qualifier="mdpi" gap:density="mdpi" width="320" height="480" src="lib/splash/screen-mdpi.9.png" />
    <splash gap:platform="android" gap:qualifier="hdpi" gap:density="hdpi"  width="480" height="800" src="lib/splash/screen-hdpi.9.png" />
	<splash gap:platform="android" gap:qualifier="xhdpi" gap:density="xhdpi" width="640" height="960" src="lib/splash/screen-xhdpi.9.png" />
	<splash gap:platform="android" gap:qualifier="xxhdpi" gap:density="xxhdpi" width="960" height="1440" src="lib/splash/screen-xxhdpi.9.png" />
	<splash gap:platform="android" gap:qualifier="xxxhdpi" gap:density="xxxhdpi" width="1280" height="1920" src="lib/splash/screen-xxxhdpi.9.png" />

    <access origin="*" />
</widget>
